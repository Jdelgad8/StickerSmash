{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ES2017"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "assets/*": ["assets/*"],
      "buttons": ["components/Button/index"],
      "components/*": ["components/*"],
      "constants": ["constants/index"],
      "emojis": ["components/Emoji/index"],
      "helpers/*": ["helpers/*"],
      "modals": ["components/Modal/index"],
      "text/*": ["components/Text/*"],
      "theme": ["constants/styles/theme"]
    }
  }
}
